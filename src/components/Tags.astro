---
import { capitalize } from '../utils';

const { tags } = Astro.props;

interface Props {
  tags: string[];
}
---

<div class="flex flex-wrap gap-2">
  {tags.map((tag: string, index: number) => (
   <span
   class={index % 3 === 0 
  ? "px-2 py-1 bg-pink-500 text-white rounded-full text-xs hover:bg-pink-600 transition duration-300 ease-in-out"
  : index % 3 === 1 
  ? "px-2 py-1 bg-orange-500 text-white rounded-full text-xs hover:bg-orange-600 transition duration-300 ease-in-out"
  : "px-2 py-1 bg-teal-500 text-white rounded-full text-xs hover:bg-teal-600 transition duration-300 ease-in-out"
}

   ><a href={'/articles/tag/' + tag}>#{capitalize(tag)}</a></span>
  ))}
 </div>