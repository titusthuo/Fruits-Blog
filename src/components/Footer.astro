---
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";
import { capitalize } from "../utils";

const allBlogArticles: CollectionEntry<'blog'>[] = await getCollection('blog');

const tags: string[] = allBlogArticles.flatMap((article: any) => article.data.tags);

const uniqueTags: string[] = [...new Set(tags)];
---

<footer class="bg-gradient-to-r from-blue-700 to-blue-900 text-white py-8">
  <div class="container mx-auto max-w-screen-xl px-8">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
      <!-- About Section -->
      <div class="flex flex-col justify-center md:items-start">
        <h3 class="text-xl font-semibold mb-4 text-gray-100">About</h3>
        <p class="text-gray-300 text-sm bg-blue-800 p-4 rounded-lg">
          FruitLovers is a blog dedicated to all things fruit. Discover articles, recipes, and tips about different fruits, their health benefits, and exciting ways to incorporate them into your diet.
        </p>
      </div>
      <!-- Categories Section -->
      <div class="flex flex-col justify-center items-center">
        <h3 class="text-xl font-semibold mb-4 text-gray-100">Categories</h3>
        <ul class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-4 text-gray-300 text-sm">
          {uniqueTags.map(tag => (
            <li>
              <a href={'/articles/tag/' + tag} class="hover:text-teal-300 transition-colors duration-300">#{capitalize(tag)}</a>
            </li>
          ))}
        </ul>
      </div>
      <!-- Contact Section -->
      <div class="flex flex-col justify-center items-center md:items-end">
        <h3 class="text-xl font-semibold mb-4 text-gray-100">Contact</h3>
        <ul class="text-gray-300 text-sm space-y-2">
          <li>
            <a href="#" class="hover:text-teal-300 transition-colors duration-300">Email</a>
          </li>
          <li>
            <a href="#" class="hover:text-teal-300 transition-colors duration-300">Twitter</a>
          </li>
          <li>
            <a href="#" class="hover:text-teal-300 transition-colors duration-300">Facebook</a>
          </li>
          <li>
            <a href="#" class="hover:text-teal-300 transition-colors duration-300">Instagram</a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</footer>
