---
const { currentPage, totalPages, disablePrevious, disableNext } = Astro.props;

interface Props {
  currentPage: number;
  totalPages: number;
  disablePrevious: boolean;
  disableNext: boolean;
}
---
<div class="flex justify-between mt-10">
  <a 
    href={'/articles?page=' + (currentPage - 1)} 
    class={
      disablePrevious 
        ? "inline-block bg-gray-200 px-4 py-2 text-gray-500 rounded-lg cursor-not-allowed" 
        : "inline-block bg-teal-500 px-4 py-2 text-white rounded-lg hover:bg-teal-600 transition duration-300 ease-in-out"
    }
  >
    Previous
  </a>
  <a 
    href={'/articles?page=' + (currentPage + 1)} 
    class={
      disableNext 
        ? "inline-block bg-gray-200 px-4 py-2 text-gray-500 rounded-lg cursor-not-allowed" 
        : "inline-block bg-teal-500 px-4 py-2 text-white rounded-lg hover:bg-teal-600 transition duration-300 ease-in-out"
    }
  >
    Next
  </a>
</div>
