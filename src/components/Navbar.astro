---
import { Image } from "astro:assets";
import logo from '../images/logo.png';
---

<nav class="bg-blue-600 text-white shadow-md">
  <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
    <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
      <Image src={logo} class="h-14" alt="FruitsLovers Logo" width={55} height={55} />
      <span class="self-center text-2xl font-bold whitespace-nowrap">
        <span class="text-teal-400">Fruits</span>Enthusiasts
      </span>
    </a>
    <button
      data-collapse-toggle="navbar-default"
      type="button"
      class="inline-flex items-center p-2 w-10 h-10 justify-center text-gray-300 rounded-lg md:hidden hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-600"
      aria-controls="navbar-default"
      aria-expanded="false"
    >
      <span class="sr-only">Open main menu</span>
      <svg
        class="w-5 h-5"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 17 14"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 1h15M1 7h15M1 13h15"
        />
      </svg>
    </button>
    <div class="hidden w-full md:block md:w-auto" id="navbar-default">
      <ul
        class="font-medium flex flex-col p-4 md:p-0 mt-4 border border-blue-700 text-white rounded-lg md:flex-row md:space-x-8 rtl:space-x-reverse md:mt-0 md:border-0"
      >
        <li>
          <a
            href="/"
            class="block py-2 px-3 rounded md:p-0 hover:text-blue-300 transition duration-200"
            aria-current="page"
          >Home</a>
        </li>
        <li>
          <a
            href="/articles"
            class="block py-2 px-3 rounded md:p-0 hover:text-blue-300 transition duration-200"
          >All Articles</a>
        </li>
        <li>
          <a
            href="/about"
            class="block py-2 px-3 rounded md:p-0 hover:text-blue-300 transition duration-200"
          >About</a>
        </li>
      </ul>
    </div>
  </div>
</nav>
